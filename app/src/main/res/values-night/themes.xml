<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyFamGPS" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_myfam</item>
        <item name="colorPrimaryVariant">@color/purple_myfam</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorBackgroundFloating">@color/purple_myfam</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/purple_myfam</item>
        <!--item name="android:statusBarColor">?attr/colorPrimaryVariant</item-->
        <!-- Customize your theme here. -->

    </style>

    <style name="TextAppearance.Plan" parent="Theme.MyFamGPS">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="stylePlan" parent="Theme.MyFamGPS">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/texto_gris</item>
    </style>

    <style name="enlaces" parent="Theme.MyFamGPS">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/enlaces</item>
    </style>

    <style name="titulos" parent="Theme.MyFamGPS">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#DE000000</item>
    </style>

</resources>